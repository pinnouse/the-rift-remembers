{
  "private": true,
  "name": "my-app",
  "version": "1.0.0",
  "description": "npm init template for bootstrapping an empty Colyseus project",
  "main": "build/server.js",
  "engines": {
    "node": ">= 16.13.0"
  },
  "scripts": {
    "prestart": "npm run tsoa:routes && npm run tsoa:spec",
    "start": "tsx watch src/server.ts",
    "loadtest": "tsx loadtest/example.ts --room my_room --numClients 2",
    "build": "npm run clean && tsc",
    "clean": "rimraf build",
    "tsoa:spec": "tsoa spec --out build/swagger.json",
    "tsoa:routes": "tsoa routes --out build/routes.ts",
    "docs:serve": "node ./build/docs-server.js || true",
    "test": "mocha -r tsx test/**_test.ts --exit --timeout 15000"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/colyseus/create-colyseus/issues"
  },
  "homepage": "https://github.com/colyseus/create-colyseus#readme",
  "devDependencies": {
    "@colyseus/loadtest": "^0.16.0",
    "@colyseus/testing": "^0.16.0",
    "@types/express": "^4.17.1",
    "@types/mocha": "^10.0.1",
    "@types/swagger-ui-express": "^4.1.8",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.0",
    "tsoa": "^4.0.0",
    "tsx": "^4.10.2",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.16.0",
    "@colyseus/playground": "^0.16.0",
    "@colyseus/tools": "^0.16.0",
    "colyseus": "^0.16.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "swagger-ui-express": "^4.6.3"
  }
}
